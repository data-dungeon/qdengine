//-----------------------------------------------------------------------------
void	CIRCLE::SetCenter(const POINT2D &	Center)
{
	_Center = Center;
}

//-----------------------------------------------------------------------------
//	Name:		SetRadius
//	Object:		
//	02-03-11:	RMA - Created
//-----------------------------------------------------------------------------
void	CIRCLE::SetRadius(float	rRadius)
{
	_rRadius = rRadius;
}

//-----------------------------------------------------------------------------
//	Name:		GetRadius
//	Object:		
