CIRCLE::CIRCLE(bool bInit)
{
	if (bInit)
	{
		_Center.SetXY(0.0f, 0.0f);
		_rRadius = 0.0f;
	}
}


//-----------------------------------------------------------------------------
// Name: CIRCLE constructor
// Object: 
//00-11-13 JVA Created: 
//-----------------------------------------------------------------------------
CIRCLE::CIRCLE(const CIRCLE & Circle)
:
_Center		(Circle._Center),
_rRadius	(Circle._rRadius)
{
	// Do nothing
}

//-----------------------------------------------------------------------------
// Name: CIRCLE constructor
// Object: 
//00-11-13 JVA Created: 
//-----------------------------------------------------------------------------
CIRCLE::CIRCLE(const POINT2D &	Center, 
			   float			rRadius)
:
_Center(Center),
_rRadius(rRadius)
{
}

//-----------------------------------------------------------------------------
//	Name:		operator=
//	Object:		
//	02-03-11:	RMA - Created
//-----------------------------------------------------------------------------
CIRCLE &	CIRCLE::operator = (const CIRCLE & Circle)
{
	_Center  = Circle._Center;
	_rRadius = Circle._rRadius;
	return (*this);
}

//-----------------------------------------------------------------------------
//	Name:		SetCenter
//	Object:		
