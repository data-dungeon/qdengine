//-----------------------------------------------------------------------------
//	Name:		GetRandomPoint
//	Object:		
//	01-11-29:	ELE - Created
//-----------------------------------------------------------------------------
void	SEGMENT::GetRandomPoint(VECTOR &	Point) const
{
	VECTOR	V;
	V.Sub(_Point2, _Point1);

	float	rLength = V.Length();
	float	rRandomLength = MATH::Rand(rLength);

	V.SetLength(rRandomLength);

	Point.Add(_Point1, V);
}

