VECTOR_PACKED::VECTOR_PACKED()
{
	// Do nothing
}

//-----------------------------------------------------------------------------
//	Name:		VECTOR_PACKED constructor
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
VECTOR_PACKED::VECTOR_PACKED(const VECTOR_PACKED & V)
{
	Build( V );
}

//-----------------------------------------------------------------------------
//	Name:		VECTOR_PACKED constructor
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
VECTOR_PACKED::VECTOR_PACKED( char cVx,
							  char cVy,
							  char cVz )
{
	Build(cVx , cVy , cVz);
}

//-----------------------------------------------------------------------------
//	Name:		VECTOR_PACKED constructor
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
VECTOR_PACKED::VECTOR_PACKED(const VECTOR & V)
{
	Build(V);
}

//-----------------------------------------------------------------------------
//	Name:		Build
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Build(const VECTOR_PACKED & V )
{
	if ( this != &V )
	{
			_cX = V._cX;
			_cY = V._cY;
			_cZ = V._cZ;	
	}
}

//-----------------------------------------------------------------------------
//	Name:		Build
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Build( char cVx,
							  char cVy,
							  char cVz )
{
	_cX = cVx;
	_cY = cVy;
	_cZ = cVz;
}


//-----------------------------------------------------------------------------
//	Name:		Build
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Build(const VECTOR & V)
{
	float	rx, ry, rz;

	V.GetXYZ( rx, ry, rz );

	_cX = static_cast<char> ( rx * 127 );
	_cY = static_cast<char> ( ry * 127 );
	_cZ = static_cast<char> ( rz * 127 );
}


//-----------------------------------------------------------------------------
//	Name:		Add
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Add( VECTOR_PACKED & V1,
						    VECTOR_PACKED & V2 )
{
	_cX = V1._cX + V2._cX;
	_cY = V1._cY + V2._cY;
	_cZ = V1._cZ + V2._cZ;
}


//-----------------------------------------------------------------------------
//	Name:		Add
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Add( VECTOR_PACKED & V )
{
	_cX += V._cX;
	_cY += V._cY;
	_cZ += V._cZ;
}


//-----------------------------------------------------------------------------
//	Name:		Sub
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Sub( VECTOR_PACKED & V1,
						    VECTOR_PACKED & V2 )
{
	_cX = V1._cX - V2._cX;
	_cY = V1._cY - V2._cY;
	_cZ = V1._cZ - V2._cZ;
}


//-----------------------------------------------------------------------------
//	Name:		Sub
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Sub( VECTOR_PACKED & V )
{
	_cX -= V._cX;
	_cY -= V._cY;
	_cZ -= V._cZ;
}


//-----------------------------------------------------------------------------
//	Name:		Neg
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Neg( VECTOR_PACKED & V )
{
	_cX = - V._cX;
	_cY = - V._cY;
	_cZ = - V._cZ;
}


//-----------------------------------------------------------------------------
//	Name:		Neg
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void	VECTOR_PACKED::Neg()
{
	_cX = - _cX;
	_cY = - _cY;
	_cZ = - _cZ;
}



//-----------------------------------------------------------------------------
//	Name:		GetXYZ
//	Object:		
//	01-01-16:	JVA - Created
//-----------------------------------------------------------------------------
void VECTOR_PACKED::GetXYZ( int & nXX , int & nYY , int & nZZ ) const
{
	nXX = _cX;
	nYY = _cY;
	nZZ = _cZ;
}



